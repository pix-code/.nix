(defsrc
    esc  F1   F2   F3   F4   F5   F6   F7   F8   F9   F10  F11  F12  del  brk  comp
    grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
    tab  q    w    e    r    t    y    u    i    o    p    [    ]
    caps a    s    d    f    g    h    j    k    l    ;    '    \    ret
    lsft <    z    x    c    v    b    n    m    ,    .    /    rsft up
    lctl      lmet lalt           spc            ralt rctl      left down rght
)

(deflayer colemak
    @cap F1   F2   F3   F4   F5   F6   F7   F8   F9   F10  F11  F12  del  pp   rmet
    grv  1    2    3    4    5    6    =    7    8    9    0    -    bspc
    @mcp q    w    f    p    b    \    j    l    u    y    ;    /
    @cap a    r    s    t    g    =    m    n    e    i    o    @spn ret
    @tab z    x    c    d    v    [    ]    k    h    ,    .    rmet up
    lctl      lmet lalt           spc            mlft mrgt      left down rght
)

(deflayer ext
    lrld @cmk @qrt @nmd _    _    _    _    _    _    _    _    _    caps _    _
    esc  _    _    _    _    _    _    _    _    _    _    _    _    MediaPlayPause
    _    _    _    M-f  _    _    _    _    home up   end  _    _
    _    lalt lsft lmet lctl _    _    M-m  left down rght bspc _    M-ret
    _    _    _    _    M-d  _    z    _    M-k  M-h  _    _    _    _
    _         _    _              ret            ret  _         _    _    _
)

(deflayer qwerty
    esc  F1   F2   F3   F4   F5   F6   F7   F8   F9   F10  F11  F12  del  brk  comp
    grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
    tab  q    w    e    r    t    y    u    i    o    p    [    ]
    @cap a    s    d    f    g    h    j    k    l    ;    '    \    ret
    lsft <    z    x    c    v    b    n    m    ,    .    /    rsft up
    lctl      lmet lalt           spc            mlft mrgt      left down rght
)

(deflayer nomod
    esc  F1   F2   F3   F4   F5   F6   F7   F8   F9   F10  F11  F12  del  brk  comp
    grv  1    2    3    4    5    6    =    7    8    9    0    -    bspc
    tab  q    w    f    p    b    [    j    l    u    y    ;    /
    @cap a    r    s    t    g    ]    m    n    e    i    o    '    ret
    lsft z    x    c    d    v    \    =    k    h    ,    .    rsft up
    lctl      lmet lalt           spc            ralt rctl      left down rght
)

